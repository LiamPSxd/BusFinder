<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">

    <RelativeLayout
        android:id="@+id/subRelative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-95dp"
        android:layout_below="@+id/subRelative2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/fondo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etqUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:hint="Usuario"
                    android:fontFamily="@font/outfit_extra_bold"
                    android:gravity="start|center"
                    android:textColor="@color/black1"
                    android:textStyle="bold"
                    android:textColorHint="@color/color"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="0dp"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxBackgroundColor="@color/fondo"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:autofillHints="username"
                        android:inputType="textPersonName"
                        android:fontFamily="@font/outfit_medium"
                        android:textColor="@color/black1"
                        android:textSize="22sp"
                        android:textColorHighlight="@color/color14"
                        android:gravity="start|center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etqCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/etqUsuario"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:hint="Correo"
                    android:fontFamily="@font/outfit_extra_bold"
                    android:gravity="start|center"
                    android:textColor="@color/black1"
                    android:textStyle="bold"
                    android:textColorHint="@color/color"
                    app:hintAnimationEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="0dp"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxBackgroundColor="@color/fondo"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:autofillHints="name"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/outfit_medium"
                        android:textColor="@color/black1"
                        android:textSize="22sp"
                        android:textColorHighlight="@color/color14"
                        android:gravity="start|center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etqContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/etqCorreo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:hint="Contraseña"
                    android:fontFamily="@font/outfit_extra_bold"
                    android:gravity="start|center"
                    android:textColor="@color/black1"
                    android:textStyle="bold"
                    android:textColorHint="@color/color"
                    app:hintAnimationEnabled="true"
                    app:endIconMode="password_toggle"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="0dp"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxBackgroundColor="@color/fondo"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtContrasenia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:autofillHints="password"
                        android:inputType="textPassword"
                        android:fontFamily="@font/outfit_medium"
                        android:textColor="@color/black1"
                        android:textSize="22sp"
                        android:textColorHighlight="@color/color14"
                        android:gravity="start|center" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etqConfirmarContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@+id/etqContrasenia"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:hint="Confirmar contraseña"
                    android:fontFamily="@font/outfit_extra_bold"
                    android:gravity="start|center"
                    android:textColor="@color/black1"
                    android:textStyle="bold"
                    android:textColorHint="@color/color"
                    app:hintAnimationEnabled="true"
                    app:endIconMode="password_toggle"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeWidth="0dp"
                    app:boxCollapsedPaddingTop="10dp"
                    app:boxBackgroundColor="@color/fondo"
                    app:boxCornerRadiusTopStart="25dp"
                    app:boxCornerRadiusTopEnd="25dp"
                    app:boxCornerRadiusBottomStart="25dp"
                    app:boxCornerRadiusBottomEnd="25dp" >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtConfirmarContrasenia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:autofillHints="password"
                        android:inputType="textPassword"
                        android:fontFamily="@font/outfit_medium"
                        android:textColor="@color/black1"
                        android:textSize="22sp"
                        android:textColorHighlight="@color/color14"
                        android:gravity="start|center" />
                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/etqRedesSociales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/fondo1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/outfit_extra_bold"
            android:gravity="center"
            android:text="o continue con"
            android:textColor="@color/black1"
            android:textSize="24sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fondo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_below="@+id/etqRedesSociales"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/btnFacebook"
                    android:backgroundTint="#00000000"
                    android:contentDescription="AutenGoogle"
                    app:srcCompat="@drawable/google" />

                <ImageButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="#00000000"
                    android:contentDescription="AutenFacebook"
                    app:srcCompat="@drawable/facebook" />

                <ImageButton
                    android:id="@+id/btnTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btnFacebook"
                    android:backgroundTint="#00000000"
                    android:contentDescription="AutenTwitter"
                    app:srcCompat="@drawable/twitter" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/user"
            app:civ_border_color="@color/white"
            app:civ_circle_background_color="@color/white"
            app:civ_border_width="4dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCambiarFotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="-50dp"
            android:layout_alignTop="@+id/fotoPerfil"
            android:layout_toEndOf="@+id/fotoPerfil"
            android:clickable="true"
            android:contentDescription="Cambiar foto de perfil"
            android:focusable="true"
            app:backgroundTint="@color/color11"
            app:fabSize="normal"
            app:maxImageSize="35dp"
            app:srcCompat="@drawable/camara" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:contentDescription="Pasa a la pantalla principal admin"
        android:focusable="true"
        app:backgroundTint="@color/color11"
        app:fabSize="normal"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ingresar" />
</RelativeLayout>