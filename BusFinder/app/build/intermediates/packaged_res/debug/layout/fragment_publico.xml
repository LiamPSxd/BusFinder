<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.activity.IniciarSesion">

    <TextView
        android:id="@+id/etqConfiguracion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/outfit_black"
        android:gravity="start|center"
        android:text="Configuración"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fondo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/etqConfiguracion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/etqDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center"
                android:text="DÍA"
                android:textColor="@color/black1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etqUnidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/etqDia"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center"
                android:text="Unidad"
                android:textColor="@color/black1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUnidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/etqUnidad"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/outfit_bold"
                android:gravity="start|center"
                android:text="ver unidades"
                android:textColor="@color/color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etqRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/txtUnidad"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center"
                android:text="Ruta"
                android:textColor="@color/black1"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtRuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/etqRuta"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/outfit_bold"
                android:gravity="start|center"
                android:text="ver rutas"
                android:textColor="@color/color"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etqParada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_below="@+id/txtRuta"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center"
                android:text="Parada"
                android:textColor="@color/black1"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtParada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/etqParada"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/outfit_bold"
                android:gravity="start|center"
                android:text="ver paradas"
                android:textColor="@color/color"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>