<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.activity.IniciarSesion">

    <TextView
        android:id="@+id/etqIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/outfit_black"
        android:gravity="start|center"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fondo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/etqIniciarSesion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etqUsuarioOCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Usuario o Correo"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center"
                android:textColor="@color/black1"
                android:textStyle="bold"
                android:textColorHint="@color/color"
                app:hintAnimationEnabled="true"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="0dp"
                app:boxCollapsedPaddingTop="10dp"
                app:boxBackgroundColor="@color/fondo"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtUsuarioOCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:autofillHints="username"
                    android:inputType="textEmailAddress"
                    android:fontFamily="@font/outfit_medium"
                    android:textColor="@color/black1"
                    android:textSize="22sp"
                    android:textColorHighlight="@color/color14"
                    android:gravity="start|center" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etqContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/etqUsuarioOCorreo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Contraseña"
                android:fontFamily="@font/outfit_extra_bold"
                android:gravity="start|center_vertical"
                android:textColor="@color/black1"
                android:textStyle="bold"
                android:textColorHint="@color/color"
                app:hintAnimationEnabled="true"
                app:endIconMode="password_toggle"
                app:boxBackgroundMode="outline"
                app:boxStrokeWidth="0dp"
                app:boxCollapsedPaddingTop="10dp"
                app:boxBackgroundColor="@color/fondo"
                app:boxCornerRadiusTopStart="25dp"
                app:boxCornerRadiusTopEnd="25dp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusBottomEnd="25dp" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:autofillHints="password"
                    android:fontFamily="@font/outfit_medium"
                    android:gravity="start|center"
                    android:inputType="textPassword"
                    android:textColor="@color/black1"
                    android:textColorHighlight="@color/color14"
                    android:textSize="22sp" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/etqRedesSociales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/fondo1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/outfit_extra_bold"
        android:gravity="center"
        android:text="o inicie sesión con"
        android:textColor="@color/black1"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fondo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/etqRedesSociales"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="30dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btnFacebook"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenGoogle"
                app:srcCompat="@drawable/google" />

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenFacebook"
                app:srcCompat="@drawable/facebook" />

            <ImageButton
                android:id="@+id/btnTwitter"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnFacebook"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenTwitter"
                app:srcCompat="@drawable/twitter" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:contentDescription="Pasa a la pantalla principal"
        android:focusable="true"
        app:backgroundTint="@color/color11"
        app:fabSize="normal"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ingresar" />
</RelativeLayout>