<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.fragment.TipoPublico">

    <RelativeLayout
        android:id="@+id/subRelative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-90dp"
        android:layout_below="@+id/subRelative2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/fondo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/etqUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/blogger_sans_medium"
                    android:gravity="start|center_vertical"
                    android:text="USUARIO"
                    android:textColor="@color/color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/etqUsuario"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:autofillHints="username"
                    android:backgroundTint="@color/color0"
                    android:ems="10"
                    android:fontFamily="@font/blogger_sans"
                    android:gravity="start|center_vertical"
                    android:hint="usuario"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black1"
                    android:textColorHint="@color/color0"
                    android:textSize="20sp"
                    android:textCursorDrawable="@color/black1"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/etqCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/txtUsuario"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/blogger_sans_medium"
                    android:gravity="start|center_vertical"
                    android:text="CORREO"
                    android:textColor="@color/color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/etqCorreo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:autofillHints="name"
                    android:backgroundTint="@color/color0"
                    android:ems="10"
                    android:fontFamily="@font/blogger_sans"
                    android:gravity="start|center_vertical"
                    android:hint="correo"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black1"
                    android:textColorHint="@color/color0"
                    android:textSize="20sp"
                    android:textCursorDrawable="@color/black1"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/etqContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/txtCorreo"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/blogger_sans_medium"
                    android:gravity="start|center_vertical"
                    android:text="CONTRASEÑA"
                    android:textColor="@color/color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_below="@+id/etqContrasenia"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:autofillHints="password"
                    android:backgroundTint="@color/color0"
                    android:ems="10"
                    android:fontFamily="@font/blogger_sans"
                    android:gravity="start|top"
                    android:hint="contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black1"
                    android:textColorHint="@color/color0"
                    android:textSize="20sp"
                    android:textCursorDrawable="@color/black1"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/etqConfirmarContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_below="@+id/txtContrasenia"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/blogger_sans_medium"
                    android:gravity="start|center_vertical"
                    android:text="CONFIRMAR CONTRASEÑA"
                    android:textColor="@color/color"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtConfirmarContrasenia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/etqConfirmarContrasenia"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:autofillHints="password"
                    android:backgroundTint="@color/color0"
                    android:ems="10"
                    android:fontFamily="@font/blogger_sans"
                    android:gravity="start|top"
                    android:hint="contraseña"
                    android:inputType="textPassword"
                    android:textColor="@color/black"
                    android:textColorLink="@color/black1"
                    android:textColorHint="@color/color0"
                    android:textSize="20sp"
                    android:textCursorDrawable="@color/black1"
                    tools:ignore="TouchTargetSizeCheck" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/etqRedesSociales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/fondo1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/blogger_sans_medium"
            android:gravity="center"
            android:text="o continua con"
            android:textColor="@color/black1"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/fondo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="22dp"
            android:layout_below="@+id/etqRedesSociales"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp"
            app:cardElevation="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/btnGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/btnFacebook"
                    android:backgroundTint="@color/white"
                    android:contentDescription="AutenGoogle"
                    app:srcCompat="@drawable/google" />

                <ImageButton
                    android:id="@+id/btnFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/white"
                    android:contentDescription="AutenFacebook"
                    app:srcCompat="@drawable/facebook" />

                <ImageButton
                    android:id="@+id/btnTwitter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/btnFacebook"
                    android:backgroundTint="@color/white"
                    android:contentDescription="AutenTwitter"
                    app:srcCompat="@drawable/twitter" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/subRelative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/user" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnCambiarFotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="-50dp"
            android:layout_alignTop="@+id/fotoPerfil"
            android:layout_toEndOf="@+id/fotoPerfil"
            android:clickable="true"
            android:contentDescription="Cambiar foto de perfil"
            android:focusable="true"
            app:backgroundTint="@color/color12"
            app:fabSize="normal"
            app:maxImageSize="35dp"
            app:srcCompat="@drawable/camara" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinuarTipoPublico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:contentDescription="Pasa a la pantalla principal público"
        android:focusable="true"
        app:backgroundTint="@color/color12"
        app:fabSize="normal"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ingresar" />
</RelativeLayout>