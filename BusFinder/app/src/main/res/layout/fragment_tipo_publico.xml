<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.fragment.TipoPublico">

    <Button
        android:id="@+id/fondo1"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="22dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:enabled="false"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/etqRedesSociales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/fotoPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="-80dp"
        app:layout_constraintBottom_toTopOf="@+id/fondo1"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@id/fondo1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnCambiarFotoPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="-60dp"
        android:clickable="true"
        android:contentDescription="Cambiar foto de perfil"
        android:focusable="true"
        app:backgroundTint="@color/color12"
        app:fabSize="normal"
        app:layout_constraintEnd_toEndOf="@id/fondo1"
        app:layout_constraintStart_toStartOf="@id/fondo1"
        app:layout_constraintTop_toBottomOf="@+id/fotoPerfil"
        app:maxImageSize="35dp"
        app:srcCompat="@drawable/camara" />

    <TextView
        android:id="@+id/etqUsuario"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/blogger_sans_medium"
        android:gravity="start|center_vertical"
        android:text="USUARIO"
        android:textColor="@color/color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@id/fondo1"
        app:layout_constraintBottom_toTopOf="@+id/txtUsuario" />

    <EditText
        android:id="@+id/txtUsuario"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:autofillHints="username"
        android:backgroundTint="@color/color0"
        android:ems="10"
        android:fontFamily="@font/blogger_sans"
        android:gravity="start|center_vertical"
        android:hint="usuario"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorLink="@color/black1"
        android:textColorHint="@color/color0"
        android:textSize="20sp"
        android:textCursorDrawable="@color/black1"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@+id/fondo1"
        app:layout_constraintBottom_toTopOf="@id/etqCorreo"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/etqCorreo"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/blogger_sans_medium"
        android:gravity="start|center_vertical"
        android:text="CORREO"
        android:textColor="@color/color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@id/fondo1"
        app:layout_constraintBottom_toTopOf="@+id/txtCorreo" />

    <EditText
        android:id="@+id/txtCorreo"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="30dp"
        android:autofillHints="name"
        android:backgroundTint="@color/color0"
        android:ems="10"
        android:fontFamily="@font/blogger_sans"
        android:gravity="start|center_vertical"
        android:hint="correo"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorLink="@color/black1"
        android:textColorHint="@color/color0"
        android:textSize="20sp"
        android:textCursorDrawable="@color/black1"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@+id/fondo1"
        app:layout_constraintBottom_toTopOf="@id/etqContrasenia"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/etqContrasenia"
        android:layout_width="0dp"
        android:layout_height="22dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/blogger_sans_medium"
        android:gravity="start|center_vertical"
        android:text="CONTRASEÑA"
        android:textColor="@color/color"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@id/fondo1"
        app:layout_constraintBottom_toTopOf="@+id/txtContrasenia" />

    <EditText
        android:id="@+id/txtContrasenia"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:autofillHints="password"
        android:backgroundTint="@color/color0"
        android:ems="10"
        android:fontFamily="@font/blogger_sans"
        android:gravity="start|top"
        android:hint="contraseña"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorLink="@color/black1"
        android:textColorHint="@color/color0"
        android:textSize="20sp"
        android:textCursorDrawable="@color/black1"
        app:layout_constraintEnd_toEndOf="@+id/fondo1"
        app:layout_constraintStart_toStartOf="@+id/fondo1"
        app:layout_constraintBottom_toBottomOf="@id/fondo1"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/etqRedesSociales"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="141dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/blogger_sans_medium"
        android:gravity="center"
        android:text="o continua con"
        android:textColor="@color/black1"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/fondo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fondo2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:enabled="false"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/btnContinuarTipoPublico"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnGoogle"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:contentDescription="AutenGoogle"
        app:layout_constraintBottom_toBottomOf="@id/fondo2"
        app:layout_constraintStart_toStartOf="@id/fondo2"
        app:layout_constraintTop_toTopOf="@id/fondo2"
        app:srcCompat="@drawable/google" />

    <ImageButton
        android:id="@+id/btnFacebook"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:contentDescription="AutenFacebook"
        app:layout_constraintBottom_toBottomOf="@id/fondo2"
        app:layout_constraintEnd_toStartOf="@id/btnTwitter"
        app:layout_constraintStart_toEndOf="@id/btnGoogle"
        app:layout_constraintTop_toTopOf="@id/fondo2"
        app:srcCompat="@drawable/facebook" />

    <ImageButton
        android:id="@+id/btnTwitter"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="@color/white"
        android:contentDescription="AutenTwitter"
        app:layout_constraintBottom_toBottomOf="@id/fondo2"
        app:layout_constraintEnd_toEndOf="@id/fondo2"
        app:layout_constraintTop_toTopOf="@id/fondo2"
        app:srcCompat="@drawable/twitter" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinuarTipoPublico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="321dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:contentDescription="Pasa a la pantalla principal público"
        android:focusable="true"
        app:backgroundTint="@color/color12"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ingresar" />
</androidx.constraintlayout.widget.ConstraintLayout>