<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".view.activity.IniciarSesion">

    <TextView
        android:id="@+id/etqIniciarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/phenomena_black"
        android:gravity="start|center_vertical"
        android:text="Iniciar Sesión"
        android:textColor="@color/black"
        android:textSize="55sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fondo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/etqIniciarSesion"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/etqUsuarioOCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/phenomena_extra_bold"
                android:gravity="start|center"
                android:text="USUARIO O CORREO"
                android:textColor="@color/black1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUsuarioOCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_below="@+id/etqUsuarioOCorreo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:autofillHints="username"
                android:backgroundTint="@color/color"
                android:fontFamily="@font/phenomena_bold"
                android:gravity="start|center"
                android:hint="usuario o correo"
                android:inputType="textEmailAddress"
                android:textColor="@color/black1"
                android:textSize="22sp"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/etqContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@+id/txtUsuarioOCorreo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/phenomena_extra_bold"
                android:gravity="start|center_vertical"
                android:text="CONTRASEÑA"
                android:textColor="@color/black1"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtContrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/etqContrasenia"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:autofillHints="password"
                android:backgroundTint="@color/color"
                android:fontFamily="@font/phenomena_bold"
                android:gravity="start|center_vertical"
                android:hint="contraseña"
                android:inputType="textPassword"
                android:textColor="@color/black1"
                android:textSize="22sp"
                tools:ignore="TouchTargetSizeCheck" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/etqRedesSociales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/fondo1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/phenomena_extra_bold"
        android:gravity="center"
        android:text="o inicie sesión con"
        android:textColor="@color/black1"
        android:textSize="22sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/fondo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_below="@+id/etqRedesSociales"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="40dp"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btnGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/btnFacebook"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenGoogle"
                app:srcCompat="@drawable/google" />

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenFacebook"
                app:srcCompat="@drawable/facebook" />

            <ImageButton
                android:id="@+id/btnTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/btnFacebook"
                android:backgroundTint="#00000000"
                android:contentDescription="AutenTwitter"
                app:srcCompat="@drawable/twitter" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:contentDescription="Pasa a la pantalla principal"
        android:focusable="true"
        app:backgroundTint="@color/color11"
        app:fabSize="normal"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ingresar" />
</RelativeLayout>