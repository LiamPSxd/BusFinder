<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    android:animateLayoutChanges="true"
    tools:context=".view.fragment.AgregarAdministrador">

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurLayout"
        style="@style/BlurLayoutFullScreen" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <ImageView
                android:id="@+id/dragHandleImage"
                android:layout_marginTop="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                style="@style/DragHandleLight"
                android:contentDescription="drag_handle" />

            <include
                android:id="@+id/frameAgregarChofer"
                layout="@layout/frame_agregar_chofer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dragHandleImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/frameAgregarRuta"
                layout="@layout/frame_agregar_ruta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dragHandleImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/frameAgregarParada"
                layout="@layout/frame_agregar_parada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dragHandleImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp" />

            <include
                android:id="@+id/frameAgregarTarifa"
                layout="@layout/frame_agregar_tarifa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dragHandleImage"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/dragArea"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/tarjeta"
        android:layout_alignTop="@+id/tarjeta"
        android:layout_alignEnd="@+id/tarjeta"
        android:layout_alignBottom="@+id/tarjeta"
        android:elevation="15dp"/>
</RelativeLayout>