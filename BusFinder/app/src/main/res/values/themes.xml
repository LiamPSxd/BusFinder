<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BusFinder" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color11</item>
        <item name="colorPrimaryVariant">@color/fondo</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/fondo</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="colorAccent">@color/black1</item>
        <item name="android:textColorLink">@color/black1</item>
        <item name="android:textColorHint">@color/color</item>
        <item name="android:textCursorDrawable">@color/black1</item>
        <item name="android:textColorHighlight">@color/color0</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BusFinder.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BusFinder.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BusFinder.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BusFinder.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color11</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.BusFinder</item>
    </style>

